#!/usr/bin/env bash
set -euo pipefail

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
target="${script_dir}/codexplex"

if [[ ! -x "$target" ]]; then
  echo "error: codexplex not found at $target" >&2
  exit 1
fi

echo "warning: codex-batch-panes is deprecated; use codexplex instead." >&2
exec "$target" "$@"
