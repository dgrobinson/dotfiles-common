{
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "Monokai Dimmed",
    "vim.enableNeovim": true,                 // optional but nice
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.easymotion": true,
    "keyboard.dispatch": "keyCode"            // only if Capsâ†”Esc swapped via macOS
    //  VSCode Vim custom semicolon behaviour
"vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": [";"],       // single ;  ðŸ‘‰ leave Insert â†’ Normal
      "after": ["<Esc>"]
    },
    {
      "before": [";", ";"],  // double ;; ðŸ‘‰ insert a literal ;
      "after": [";"]
    }
  ],
  
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [";"],       // single ;  ðŸ‘‰ enter Insert mode
      "after": ["i"]
    }
  ],
  // how long (ms) VSCodeVim waits for a possible second key in a mapping
"vim.timeout": 200        // 1000 is the default; 150-300 feels instant

}
